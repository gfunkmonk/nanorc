## Make /etc/hosts nicer to read, see `man hosts 5` to see the format
#syntax "/etc/hosts" "^/etc/hosts$"
syntax "hosts" "hosts$"

color tawny "^[[:space:]]*[.0-9A-Z_]*.*$"

# IPv4
color lagoon "^[0-9\.]+\s"

# IPv6
icolor mint "^[0-9a-f:]+\s"

# interpunction
color pink "[.:]"

# comments
color brightblack "^#.*"

