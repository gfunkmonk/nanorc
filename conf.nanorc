syntax "conf" "\.c(onf|nf|fg)$" "(\.|/)conf$"

# Strings
icolor yellow ""(\\.|[^"])*""

# Variable name and value
icolor bold,#ce0 start="=" end="$"
icolor bold,#84e start="^[[:space:]]*[0-9a-z-]" end="="

# Braces and parentheses
icolor bold,brightred "(^|[[:space:]])((\[|\()[0-9a-z_!@#$%^&*-]+(\]|\)))"

# Numbers
icolor bold,green "[[:space:]][0-9]+[0-9.]*[KMGT]*"

# Comments
color italic,brightcyan start="(^|[[:space:]])(#|;).*$" end="$"
color #23e "(^|[[:space:]])(#|;)"
